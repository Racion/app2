<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Announcements</h1>
  <div class="container table-container">
    <table>
      <thead>
        <tr>
          <th>Announcement</th>
          <th>Expiration</th>
          <th>Available</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @announcements.each do |announcement| %>
          <tr>
            <td><%= announcement.announcement %></td>
            <td><%= announcement.expiration %></td>
            <td><%= announcement.available %></td>
            <td><%= "#{announcement.user.first_name} #{announcement.user.last_name}" %></td>
            <td><%= link_to 'Show', announcement %></td>
            <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
            <!--<td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <%= link_to 'New Announcement', new_announcement_path %>
</div>
